package controlador;

import javax.faces.bean.ManagedBean;

@ManagedBean
public class CalculaBean {
	private int num1, num2, resultado;
	
	public int getNum1() {
		return num1;
	}
	public void setNum1(int num1) {
		this.num1 = num1;
	}
	public int getNum2() {
		return num2;
	}
	public void setNum2(int num2) {
		this.num2 = num2;
	}
	public int getResultado() {
		return resultado;
	}
	public void setResultado(int resultado) {
		this.resultado = resultado;
	}
	public String sumar() {
		resultado = num1 + num2;
		return null;
	}
	public String restar() {
		resultado = num1 - num2;
		return null;
	}
	public String multiplicar() {
		resultado = num1 * num2;
		return null;
	}
	public String dividir() {
		if(num2 != 0) {
			resultado = num1/num2;
		}else {
			resultado = 0;
		}
		return null;
	}
	
}
